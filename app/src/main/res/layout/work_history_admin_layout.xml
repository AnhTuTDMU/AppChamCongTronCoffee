<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/txt_ChamCong"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="10dp"
        android:text="LỊCH SỬ CHẤM CÔNG NHÂN VIÊN"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#016A70" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên nhân viên"
            android:textSize="22dp"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="10dp"
            android:textStyle="bold" />
        <Spinner
            android:id="@+id/sp_TenNhanVien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/txtlocthang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lọc theo tháng"
            android:textSize="22dp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/baseline_date_range_24"
            android:drawablePadding="5dp"
            android:paddingBottom="10dp"/>

        <Spinner
            android:id="@+id/spinner_Thang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/txtnam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lọc theo năm"
            android:textSize="22dp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/baseline_date_range_24"
            android:drawablePadding="5dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="16dp"/>

        <Spinner
            android:id="@+id/spinner_Nam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/TongSoGioLamTrongThang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/red"
            android:text="Tổng giờ làm"
            android:textSize="18dp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_ThongTinChamCong"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"/>
</LinearLayout>
