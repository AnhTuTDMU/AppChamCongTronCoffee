<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:background="@drawable/background_home1"
    android:gravity="bottom"
    android:padding="10dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_User"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:paddingTop="20dp"
        android:src="@drawable/logo_tron_preview"/>
    <TextView
        android:id="@+id/txt_today"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:fontFamily="@font/baloo"
        android:gravity="center"
        android:text="Tròn Coffee"
        android:textColor="#495E57"
        android:textSize="24sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/txt_today"
        android:layout_toRightOf="@+id/img_today"
        android:fontFamily="@font/actor"
        android:gravity="center"
        android:text="Chúc bạn một ngày tốt đẹp"
        android:textColor="#45474B"
        android:textSize="14sp" />

</LinearLayout>