<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/txt_ChucVu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_attach_money_24"
        android:drawablePadding="10dp"
        android:text="Thông tin Lương"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#016A70" />

    <TextView
        android:id="@+id/textViewEmployeeID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/txtlocthang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lọc theo tháng"
            android:textSize="22dp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/baseline_date_range_24"
            android:drawablePadding="5dp"
            android:paddingBottom="10dp"/>

        <Spinner
            android:id="@+id/spinner_Thang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_toRightOf="@+id/txtlocthang" />
        <TextView
            android:id="@+id/txtnam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lọc theo năm"
            android:textSize="22dp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/baseline_date_range_24"
            android:drawablePadding="5dp"
            android:layout_below="@+id/txtlocthang"
            android:paddingBottom="10dp"/>

        <Spinner
            android:id="@+id/spinner_Nam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner_Thang"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="26dp"
            android:layout_toRightOf="@id/txtnam" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/txtngaycong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày công:"
            android:textSize="22sp"
            android:drawableLeft="@drawable/baseline_ballot_24"
            android:drawablePadding="5dp"
            android:paddingBottom="10dp"/>
        <TextView
            android:id="@+id/txt_NgayCong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtngaycong"
            android:textSize="22dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#164863"/>

        <TextView
            android:id="@+id/txtluong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lương thực tế:"
            android:layout_below="@+id/txtngaycong"
            android:textSize="22sp"
            android:drawableLeft="@drawable/baseline_attach_money_24"
            android:drawablePadding="5dp"
            android:paddingBottom="10dp"/>
        <TextView
            android:id="@+id/txt_LuongThucTe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtngaycong"
            android:textAlignment="center"
            android:layout_toRightOf="@+id/txtluong"
            android:textSize="22dp"
            android:textColor="#005B41"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtTongGioLamViec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng giờ làm trong tháng"
            android:textSize="22sp"
            android:drawableLeft="@drawable/baseline_attach_money_24"
            android:drawablePadding="5dp"
            android:textStyle="bold"
            android:paddingBottom="10dp"/>
        <TextView
            android:id="@+id/txt_TongGioLamViec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="22dp"
            android:textColor="#005B41"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_XacNhan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Xác nhận"/>
</LinearLayout>
